<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>todos for devops</title>
		<link rel="stylesheet" href="/css/base.css">
		<link rel="stylesheet" href="/css/index.css">

	</head>
	<body>
		<section class="todoapp">
			<header class="header">
				<h1>todos for NYC</h1>
        <form action="todos" method="post">
				    <input class="new-todo" name="todo[content]" placeholder="What needs to be done?" autofocus autocomplete="off">
        </form>
			</header>
      <section class="main">
        <%= yield %>
      </section>
    </section>
    <footer class="info">
			<%= Socket.gethostname %><br>
